---
export interface Props {
	source: string;
	fs: string;
	ls: string;
	tarifText: string;
	faydalarText: string;
	kullanimText: string;
	uyariText: string;
}

const { source, fs, ls, tarifText, faydalarText, kullanimText, uyariText } = Astro.props;
---

<div class="opening">
	<img src={source} alt="image for the product" />
	<div class="texts">
		<p class="fs">{fs}</p>
		<p class="ls">{ls}</p>
		<hr />
		<span class="section-title">Genel Tarif</span>
		<div class="text">{tarifText}</div>
		<span class="section-title">Faydalar覺</span>
		<div class="text">{faydalarText}</div>
		<span class="section-title">Kullan覺m覺</span>
		<div class="text">{kullanimText}</div>
		<span class="section-title">Uyar覺lar</span>
		<div class="text">{uyariText}</div>
		<slot />
	</div>
	
</div>
<style is:global>

	.opening {
		background: #ffffffab;
		backdrop-filter: blur(5rem);
		border-radius: 30px 0 0 30px;
		display: flex;
		flex-direction: row;
		justify-content: start;
		align-items: start;
		height: calc(100vh - 100px);
		width: calc(100vw - 50px);
		overflow: auto;
		position: relative;
		padding-top: 10px;
	}

	.opening .texts {
		margin-left: -150px;
		z-index: 50;
	}

	.opening img {
		margin-left: -150px;
		height: 120%;
		transform: rotateZ(15deg);
		border-radius: 500px;
	}

	.opening .fs {
		font-size: 4rem;
		padding: 0;
		margin: 0;
		font-weight: 700;
	}

	.opening .ls {
		font-size: 2.5rem;
		padding: 0;
		margin: 0;
		font-weight: 700;
		letter-spacing: 2px;
	}

	hr {
		border: 0.01px solid rgb(0 0 0 / 10%);
	}

	span.section-title {
		color: rgb(var(--accent));
		font-weight: bold;
		margin-left: 2px;
		font-size: 1.2rem;
	}

	.text {
		margin-right: 50px;
		margin-left: 1rem;
		margin-bottom: 10px;
	}

	span.section-title::before {
		content: '> ';
	}
</style>
<script type="text/javascript">
	var nodeList = document.querySelectorAll(".text");

	for (let i = 0; i < nodeList.length; i++) {
  			nodeList[i].innerHTML = nodeList[i].innerText;
	}
</script>